rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Notes uploads - authenticated users can upload/read their own files
    match /notes/{userId}/{fileName} {
      // Allow read if authenticated
      allow read: if request.auth != null;
      // Allow write only if the user is uploading to their own folder
      // and file size is less than 50MB
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 50 * 1024 * 1024;
    }
    
    // PYQ files - authenticated users can read, only admins can write
    match /pyqs/{branch}/{semester}/{subject}/{fileName} {
      // Allow read if authenticated
      allow read: if request.auth != null;
      // Allow write only for admin (you can add admin check later)
      allow write: if false; // Disable writes for now - upload via script only
    }
    
    // Results uploads - authenticated users can upload/read their own files
    match /results/{userId}/{fileName} {
      // Allow read if authenticated
      allow read: if request.auth != null;
      // Allow write only if the user is uploading to their own folder
      // and file size is less than 50MB
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 50 * 1024 * 1024;
    }
    
    // Student Resource Book - authenticated users can read, only admins can write
    match /student-resource-book/{fileName} {
      // Allow read if authenticated
      allow read: if request.auth != null;
      // Allow write only for admin (you can add admin check later)
      allow write: if false; // Disable writes for now - upload via Firebase Console or script
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own document
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow creating user profile on first login
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read/write their own Google Calendar tokens
    match /googleCalendarTokens/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read schedules
    match /schedule/{scheduleId} {
      allow read, write: if request.auth != null;
    }
    
    // Assignments - users can read/write their own assignments
    match /assignments/{assignmentId} {
      allow read: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Courses - users can read/write their own courses
    match /courses/{courseId} {
      allow read: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Assignment Submissions - users can read/write their own submissions
    match /assignmentSubmissions/{submissionId} {
      allow read: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Assignment Reminders - users can read/write their own reminders
    match /assignmentReminders/{reminderId} {
      allow read: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Reminder Preferences - users can read/write their own preferences
    match /reminderPreferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Assignment Health Scores - users can read/write their own scores
    match /assignmentHealthScores/{scoreId} {
      allow read: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Microsoft OAuth Tokens - users can read/write their own tokens
    match /microsoftTokens/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Notes - all authenticated users can read, only uploader can delete
    match /notes/{noteId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && resource.data.uploaderId == request.auth.uid;
    }
    
    // Note ratings - users can read all, write their own
    match /noteRatings/{ratingId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Exam Survival Kits - all authenticated users can read/write
    match /examSurvivalKits/{kitId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Allow all authenticated users to read PYQs
    match /pyqs/{pyqId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Update this for admin-only later
    }
    
    // Allow all authenticated users to read/write events
    match /events/{eventId} {
      allow read: if true; // Public read
      allow write: if request.auth != null;
    }
    
    // Allow all authenticated users to read/write confessions
    // Users can only delete their own confessions
    match /confessions/{confessionId} {
      allow read: if true; // Public read
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }
    
    // Confession likes - users can read all, write their own
    match /confessionLikes/{likeId} {
      allow read: if true; // Public read
      allow write: if request.auth != null;
    }
    
    // Confession reports - users can read all, write their own
    match /confessionReports/{reportId} {
      allow read: if true; // Public read (for moderation)
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to read/write rooms
    match /rooms/{roomId} {
      allow read: if true; // Public read
      allow write: if request.auth != null;
    }
    
    // Matrimony profiles - users can read all active profiles, write their own
    match /matrimonyProfiles/{userId} {
      allow read: if true; // Public read for matching
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Matrimony matches - users can read their own matches
    match /matrimonyMatches/{matchId} {
      allow read: if request.auth != null && (
        resource.data.user1Id == request.auth.uid ||
        resource.data.user2Id == request.auth.uid
      );
      allow write: if request.auth != null && (
        resource.data.user1Id == request.auth.uid ||
        resource.data.user2Id == request.auth.uid
      );
    }
    
    // Matrimony chats - users can read/write messages in their matches
    match /matrimonyChats/{messageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Matrimony reports - users can write reports
    match /matrimonyReports/{reportId} {
      allow read: if request.auth != null; // For moderation
      allow write: if request.auth != null;
    }
    
    // Results - users can read/write their own results
    match /results/{resultId} {
      allow read: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
